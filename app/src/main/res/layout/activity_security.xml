<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".SecurityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:background="@color/blue"
             />

        <androidx.cardview.widget.CardView
            android:id="@+id/gotostores"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginTop="-50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="8dp">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Security :"
                    android:textSize="24sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/blue"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dp"

                    />
                <TextView
                    android:id="@+id/displaySecurityNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="40sp"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"

                    />


            </FrameLayout>


            <!-- Add other views or content inside the CardView as needed -->

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Security"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_margin="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/blue"
                        android:layout_marginBottom="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/SearchSecid"
                            android:layout_width="250dp"
                            android:layout_height="41dp"
                            android:background="@drawable/edit_view"
                            android:paddingLeft="15dp"
                            android:layout_margin="5dp"
                            android:hint="Search using store Id.... "/>
                        <Button

                            android:id="@+id/searchSecBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Search"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/btn_bg"
                            android:fontFamily="@font/poppinsbold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/poppiesregular"
                        android:text="* Every Security you search will be displayed in the bellow form *"/>



                    <EditText
                        android:id="@+id/SecID"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/edit_view"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:hint="Security ID "/>




                    <EditText
                        android:id="@+id/SecNameEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/edit_view"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:hint="Security Name"/>
                    <EditText
                        android:id="@+id/EmailEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/edit_view"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:hint="Email "/>

                    <EditText
                        android:id="@+id/ShirtEdittext"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:background="@drawable/edit_view"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:hint="Shift Schedule "/>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/AddSec"
                            android:layout_width="130dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="35dp"
                            android:background="@drawable/btn_bg"
                            android:layout_gravity="center|left"
                            android:text="ADD " />
                        <Button
                            android:id="@+id/UpdateSec"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="35dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/btn_bg"
                            android:layout_gravity="center"
                            android:text="UPDATE" />
                        <Button
                            android:id="@+id/DeleteSec"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="35dp"
                            android:background="@drawable/btn_bg"
                            android:layout_gravity="center|right"
                            android:text="DELETE" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Security "
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_margin="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/blue"
                        android:layout_marginBottom="15dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:cardCornerRadius="8dp">



                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/securityName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="security"
                                android:textSize="20sp"
                                android:fontFamily="@font/poppinsbold"
                                android:textColor="@color/blue"
                                android:padding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center|left"
                                />
                            <TextView
                                android:id="@+id/shiftId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="shift"
                                android:textSize="20sp"
                                android:fontFamily="@font/poppiesregular"
                                android:textColor="@color/blue"
                                android:padding="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center|right"
                                />


                        </FrameLayout>


                        <!-- Add other views or content inside the CardView as needed -->

                    </androidx.cardview.widget.CardView>
                    <ListView
                        android:id="@+id/storeListView"
                        android:layout_width="match_parent"
                        android:visibility="invisible"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pie Chart of Security"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinsmedium"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="500dp" />


                </LinearLayout>


            </ScrollView>









        </LinearLayout>





    </LinearLayout>



</LinearLayout>